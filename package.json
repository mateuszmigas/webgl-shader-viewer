{
  "name": "webgl-shader-viewer",
  "displayName": "WebGL Shader Viewer",
  "description": "WebGL Shader Viewer",
  "publisher": "mateuszmigas",
  "version": "0.10.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateuszmigas/webgl-shader-viewer.git"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:webgl-shader-viewer.show-viewer",
    "onWebviewPanel:webglshaderviewer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "webgl-shader-viewer.show-viewer",
        "title": "Open WebGL Shader Viewer"
      }
    ],
    "configuration": {
      "title": "WebGL Shader Viewer",
      "properties": {
        "webglShaderViewer.renderingContext": {
          "type": "string",
          "default": "WebGL",
          "enum": [
            "WebGL",
            "WebGL2"
          ],
          "enumDescriptions": [
            "Viewer will use WebGL rendering context",
            "Viewer will use WebGL2 rendering context"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "lint": "eslint src --ext ts",
    "test:unit": "jest --config jest.config.js"
  },
  "devDependencies": {
    "@mateuszmigas/react-dropdown": "^0.9.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^12.11.7",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "^7.1.16",
    "@types/redux": "^3.6.0",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "awesome-typescript-loader": "^5.2.1",
    "eslint": "^7.9.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
